{
  "name": "happy-hour-web",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=2048' next dev",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test tests/smoke.test.ts",
    "test:api": "playwright test tests/api.test.ts",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:mobile": "playwright test --grep \"\\[MOBILE\\]\"",
    "test:desktop": "playwright test --grep \"\\[DESKTOP\\]\"",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:demo": "tsx prisma/seed.demo.ts",
    "db:seed:comprehensive": "tsx prisma/seed.demo-comprehensive.ts",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "clean": "rm -rf .next node_modules/.cache",
    "optimize": "npm run clean && npm install --production=false",
    "type-check": "tsc --noEmit",
    "deploy": "./scripts/deploy.sh",
    "vercel-build": "prisma generate && next build"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^5.7.1",
    "@sentry/nextjs": "^10.10.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcryptjs": "^2.4.6",
    "@types/cron": "^2.0.1",
    "@types/leaflet": "^1.9.20",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.8",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.3",
    "@vercel/analytics": "^1.5.0",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cron": "^4.3.3",
    "framer-motion": "^12.23.12",
    "ioredis": "^5.7.0",
    "leaflet": "^1.9.4",
    "libphonenumber-js": "^1.12.17",
    "lucide-react": "^0.294.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.5",
    "pg": "^8.16.3",
    "postcss": "^8.4.32",
    "prisma": "^5.7.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.63.0",
    "react-intersection-observer": "^9.16.0",
    "react-leaflet": "^4.2.1",
    "react-phone-number-input": "^3.4.12",
    "resend": "^6.2.0-preview-contacts.0",
    "sonner": "^2.0.7",
    "stripe": "^14.9.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.9.2",
    "zod": "^4.1.5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "ignore-loader": "^0.1.2",
    "jest": "^30.1.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.6.2"
  }
}
